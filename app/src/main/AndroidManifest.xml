<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thisischool.chool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".Activities.AnswersActivity"></activity>
        <activity android:name=".Activities.QuestionActivity" />
        <activity android:name=".Activities.MyFriendsActivity" />
        <activity android:name=".Activities.WalletActivity" />
        <activity android:name=".Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.InboxActivity" />
        <activity android:name=".Activities.AddWorkBookActivity" />
        <activity android:name=".Activities.ChooseNicknameActivity" />
        <activity android:name=".Activities.WorkBookActivity" />
        <activity android:name=".Activities.FriendRequestActivity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".Activities.LessonsActivity" />
        <activity android:name=".Activities.PrivateChatActivity" />
        <activity android:name=".Activities.MyProfileActivity" />
        <activity android:name=".Activities.ImageMessageActivity" />
        <activity android:name=".Activities.ClassInfoActivity" />
        <activity android:name=".Activities.NotesActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.ClassChatGroupActivity" />

        <service
            android:name=".OnlineDatabase.MyNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>